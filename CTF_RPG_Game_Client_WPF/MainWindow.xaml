            </Grid>
        </Border>

        <Border Background="Beige" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="170" Width="272" Margin="510,10,0,0">
            <TextBlock x:Name="MessageTextBlock" Text="Message" FontSize="14" FontFamily="Consolas" HorizontalAlignment="Left" Height="155" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
        </Border>

        <Grid HorizontalAlignment="Left" Height="325" Margin="515,185,0,0" VerticalAlignment="Top" Width="267">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
