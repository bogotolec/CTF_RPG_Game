            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonW" Content="W" FontFamily="consolas" FontSize="30" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="1"/>
            <Button x:Name="ButtonA" Content="A" FontFamily="consolas" FontSize="30" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="1"/>
            <Button x:Name="ButtonS" Content="S" FontFamily="consolas" FontSize="30" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="1"/>
            <Button x:Name="ButtonD" Content="D" FontFamily="consolas" FontSize="30" Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="1"/>

            <Button x:Name="ButtonInventory" Content="Inventory" FontFamily="consolas" FontSize="20" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1"/>
            <Button x:Name="ButtonTaskInfo" Content="Task Info" FontFamily="consolas" FontSize="20" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1"/>
            <Button x:Name="ButtonInputFlag" Content="Input flag" FontFamily="consolas" FontSize="20" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="1"/>
            <TextBox x:Name="FlagTextBox" BorderBrush="Black" FontFamily="consolas" BorderThickness="2" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="6" Grid.RowSpan="1"/>
        </Grid>


    </Grid>
