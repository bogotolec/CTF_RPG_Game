        MinHeight="600" MaxHeight="600"
        MinWidth="805" MaxWidth="805">
    <Grid>
        <Border Background="Beige" BorderBrush="Black" BorderThickness="2" CornerRadius="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="500" Width="500" Margin="10,10,0,0">
